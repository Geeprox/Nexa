{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev -- --hostname 127.0.0.1 --port 3000",
    "devPath": "http://127.0.0.1:3000",
    "distDir": "../.next"
  },
  "package": {
    "productName": "Nexa",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": ["app"],
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "identifier": "com.nexa.app"
    },
    "windows": [
      {
        "title": "Nexa",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}
